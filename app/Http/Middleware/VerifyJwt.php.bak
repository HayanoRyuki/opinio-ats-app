<?php

namespace App\Http\Middleware;

use Closure;
use Illuminate\Http\Request;
use Symfony\Component\HttpFoundation\Response;
use Firebase\JWT\JWT;
use Firebase\JWT\Key;
use Throwable;
use Illuminate\Support\Facades\Auth;
use App\Models\User;
use App\Models\Company;

class VerifyJwt
{
    public function handle(Request $request, Closure $next): Response
    {
        $authHeader = $request->header('Authorization');

        if ($authHeader && str_starts_with($authHeader, 'Bearer ')) {
            $jwt = substr($authHeader, 7);
        } else {
            abort(401);
        }

        try {
            $publicKeyPath = storage_path('oauth/public.key');
            if (! file_exists($publicKeyPath)) {
                abort(500);
            }

            $publicKey = file_get_contents($publicKeyPath);
            $payload = JWT::decode($jwt, new Key($publicKey, 'RS256'));

            // ATS側の company（UUID）を解決（今回は slug 固定）
            $company = Company::where('slug', 'opinio')->firstOrFail();

            // --- User 解決（auth-app user_id = sub） ---
            $user = User::where('auth_user_id', $payload->sub)->first();

            if (! $user) {
                $user = User::create([
                    'name'         => 'auth_user_' . $payload->sub,
                    'auth_user_id' => $payload->sub,
                    'email'        => 'auth_' . $payload->sub . '@opinio.local',
                    'company_id'   => $company->id, // UUID
                    'role'         => $payload->role ?? 'member',
                    'password'     => bcrypt(str()->random(32)),
                ]);
            }

            // ステートレスにユーザーセット
            Auth::setUser($user);

            $request->attributes->set('jwt', $payload);
            $request->attributes->set('company_id', $company->id);
            $request->attributes->set('role', $payload->role);
            $request->attributes->set('auth_user', $user);

        } catch (Throwable $e) {
            return response()->json([
                'error'   => 'jwt_decode_failed',
                'message' => $e->getMessage(),
                'class'   => get_class($e),
            ], 401);
        }

        return $next($request);
    }
}
